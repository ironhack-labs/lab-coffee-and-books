<h2>Details</h2>

<h3>{{name}}</h3>
<p>{{location.address}}</p>

<a href="/places/edit/{{_id}}">Edit Cafe</a>

<div id="map"></div>


<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDqoTfD78Qf63t6N-2EX6bc3IPAwpHgXWc"></script>
<script>
  function map(){
    const map = new google.maps.Map((
      document.getElementById('map')
    ),
    {
      zoom:18,
      center:{
        lat:{{location.coordinates.[1]}},
        lng:{{location.coordinates.[0]}}
      }
    })

    const marker = new google.maps.Marker({
     map:map,
     position:{
       lat:{{location.coordinates.[1]}},
       lng:{{location.coordinates.[0]}}
     },
     animation:google.maps.Animation.BOUNCE,
     icon: {
       url : "http://www.myiconfinder.com/uploads/iconsets/256-256-9c7aae955a2bcc1811b64c019bd3df28.png",
       scaledSize: new google.maps.Size(64, 64)
     }
    })
  }


  map()
</script>