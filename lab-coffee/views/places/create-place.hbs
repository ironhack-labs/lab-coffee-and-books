<div class="container">

    <h1>Crear nuevo lugar</h1>

    <hr>

    <form action="/crear" method="POST">

        <label> Nombre
            <input name="name" type="text">
        </label>
        <br><br>
        <hr>
        <label> Type
            <hr>
            <input type="radio" id="coffee shop" name="type" value="coffee shop">
            <label for="coffee shop">Coffee shop</label>
            <input type="radio" id="bookstore" name="type" value="bookstore">
            <label for="bookstore"> Bookstore</label>
        </label>
        <br><br>
        <hr>
        <label>Latitud
            <input name="latitude" type="text">
        </label>
        <br><br>
        <hr>
        <label>Longitud
            <input name="longitude" type="text">
        </label>
        <br><br>
        <hr>
        <input type="submit" value="Crear lugar">

    </form>
    <hr>
    <a href="/" class="btn btn-dark"> Volver al home</a>

</div>