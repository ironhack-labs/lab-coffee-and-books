<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar {{name}}</h1>
            <hr>

            <form action="/{{id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Nombre del establecimiento</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}" placeholder="{{name}}">
                </div>

                <div class="mb-3">
                    <label for="type" class="form-label">Tipo de establecimiento</label>
                    <select class="form-select" name="type" id="type">
                        <option selected value="{{type}}">Opciones</option>
                        <option value="Coffee Shop">Coffee Shop</option>
                        <option value="Bookstore">Bookstore</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="longitude" class="form-label">Longitud</label>
                    <input type="text" class="form-control" id="longitude" name="longitude"
                        value="{{location.coordinates.[1]}}">
                </div>
                <div class="mb-3">
                    <label for="latitude" class="form-label">Latitud</label>
                    <input type="text" class="form-control" id="latitude" name="latitude"
                        value="{{location.coordinates.[0]}}">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-success btn-lg">Editar</button>
                </div>

            </form>
        </div>
    </div>
</div>