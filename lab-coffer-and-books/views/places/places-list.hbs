<div class="container">

    <h2>Places List</h2>
    <hr class="mb-3">

    <div class="row">
        {{#each places}}
        <div class=" card col-3">

            <div>
                <img class="card-img-top " src="{{image}}" alt="Card image cap">
            </div>

            <div class="card-body" style="color: black;">
                <h5 class="card-title"><strong>{{name}}</strong> </h5>
                <h6 class="card-title"><strong>Type:</strong> {{type}}</h6>
                <hr>

                <a href="/places/{{id}}/edit" class="btn btn-md btn-success">edit</a>

                <form action="/places/{{id}}/delete" method="POST" style="display: inline">
                    <button type="submit" class="btn btn-md btn-dark"
                        onclick="return confirm('Are you sure you want to delete this Place?')">Delete</button>
                </form>
            </div>

        </div>
        {{/each}}
    </div>

    <hr>
</div>