<div class="container">

    <form action="/place-edit/{{id}}" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" value="{{name}}" name="name">
        </div>
        <div class="mb-3">
            <label for="placeType" class="form-label">Type</label>
            <select name="type" id="type">

                <option value="Coffee Shop">Coffee Shop</option>
                <option value="Bookstore">Bookstore</option>
            </select>
        </div>
        <div class="mb-3">
            <label for="latitude" class="form-label">Latitude</label>
            <input type="text" class="form-control" id="latitude" name="lat" value="{{lat}}">
        </div>
        <div class="mb-3">
            <label for="longitud" class="form-label">Longitud</label>
            <input type="text" class="form-control" id="longitud" name="lng" value="{{lng}}">
        </div>
        <button type="submit" class="btn btn-primary">Save changes</button>
    </form>


</div>