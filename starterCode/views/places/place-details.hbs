<div class="container">

    <h2>Detalles de {{title}}</h2>

    <hr>

    <div class="row">
        <div class="col-md-8">
            <h3>Detalles</h3>
            <p>Nombre:{{name}}</p>
            <p>Tipo:{{type}}</p>
            <p>Longitud: {{location.coordinates.[0]}}</p>
            <p>Latitud: {{location.coordinates.[1]}}</p>

        </div>
    </div>

    <hr>

    <form action="/places/{{id}}/delete" method="POST">
        <button class="btn btn-sm btn-warning" type="submit">Eliminar</button>
    </form>

    <a href="/places/{{id}}/edit" class="btn btn-dark">Editar pelicula</a>

    <a href="/places" class="btn btn-dark">Volver a la lista</a>

</div>