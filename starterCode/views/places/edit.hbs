<div class="container">
    <div class="col-md-6">
        <h2> Edit Place!</h2>
        <form action="/places/{{place.id}}/edit" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" value="{{place.name}}" name="name">
            </div>
            <div class="mb-3">
                <label for="type" class="form-label">Type</label>
                <input type="text" class="form-control" id="type" value="{{place.type}}" name="type">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input type="text" name="latitude" placeholder="latitude">
                <input type="text" name="longitude" placeholder="longitude">
            </div>
            <button type="submit" class="btn btn-dark">Create</button>
        </form>
    </div>
</div>