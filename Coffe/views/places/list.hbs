<div class="container">
    <div class="row">
        <h1>All the places</h1>
        <hr>
        <div class="col md-8">

            <figure id="myMap"></figure>
        </div>
        <div class="col md-3 mt-2">
            {{#each places}}
            <ul class="weird">
                <li class="mt-2 mb-2">{{name}} is a {{type}}
                    <br>
                    <div class="row">
                        <div class="col md-3">
                            <a href="/place/edit/{{_id}}" class="btn btn-success chiquiv">Edit</a>
                        </div>
                        <div class="col md-3">
                            <form action="/place/delete/{{_id}}" method="POST"><input type="submit" value="DELETE"
                                    class="btn btn-danger chiqui">
                            </form>
                        </div>

                    </div>
                </li>
                <hr>
            </ul>
            {{/each}}
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
<script src="/js/maps-setup.js"></script>
<script
    src="https://maps.googleapis.com/maps/api/js?callback=init&key=AIzaSyAXrluxt6edH6GHzswvJd_nckU_vPeBjzc"></script>