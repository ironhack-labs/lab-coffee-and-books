<main class="container my-5">
    <h1>Lugares</h1>
    <hr>

    <ol class="list-group">

        {{#each place}}

        <li class="list-group-item d-flex justify-content-between align-items-start">
            <div class="ms-2 me-auto">
                <div class="fw-bold">{{name}}</div>
                <p>{{type}}</p>
            </div>
            <div>

                <a href="/places/{{_id}}/edit" class="btn btn-warning btn-sm me-2">Editar</a>
                <form action="/places/delete/{{_id}}" method="POST" class="d-inline">
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-sm">
                </form>
            </div>
        </li>

        {{/each}}
    </ol>
    <hr>
    <a href="/" class="btn btn-dark mb-3">Volver a inicio</a>
    <a href="/places/create" class="btn btn-dark mb-3">AÃ±adir nuevo lugar</a>
</main>