<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Create Place</h1>
            <hr>

            <form action="/places/create" method="POST">
                <div class="mb-3 row flex-column">
                    <div class="col">
                        <label for="emailInput" class="form-label">Name</label>
                        <input type="text" class="form-control" id="emailInput" name="name">
                        <div class="form-text">Requerido.</div>
                    </div>
                    <div class="col mt-3">
                        <label for="emailInput" class="form-label">Longitude</label>
                        <input type="number" step="any" class="form-control" id="emailInput" name="longitude">
                        <label for="emailInput" class="form-label">Latitude</label>
                        <input type="number" step="any" class="form-control" id="emailInput" name="latitude">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Type</label>
                    <select class="form-select" name="type">
                        <option selected>Select One</option>
                        <option value="coffee shop">Coffee Shop</option>
                        <option value="bookstore">Bookstore</option>
                    </select>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block mb-5">Create Place</button>
                </div>
            </form>
        </div>
    </div>

</div>