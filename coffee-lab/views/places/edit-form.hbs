<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>edit place</h1>
            <hr>
            <form action="/places/{{id}}/edit" method="POST">
                <div class="mb-3 row">
                    <div class="col">
                        <label for="emailInput" class="form-label">Name</label>
                        <input value="{{name}}" type="text" class="form-control" id="emailInput" name="name">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Type</label>
                    <select class="form-select" name="type">
                        <option disabled selected>{{type}}</option>
                        <option value="coffee shop">Coffee Shop</option>
                        <option value="bookstore">Bookstore</option>
                    </select>
                </div>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block mb-5">Update Place</button>
                </div>
            </form>
            <a class="btn btn-primary block mb-5" href="/places">Volver</a>
        </div>
    </div>

</div>