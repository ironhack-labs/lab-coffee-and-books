<div class="row justify-content-center">
	<div class="col-9">
		<h2 class="mb-4">Editar lugar</h2>
		<form action="/edit/{{place.id}}" method="POST">
			<div class="mb-3">
				<label for="nameInput" class="form-label">Nombre</label>
				<input type="text" class="form-control" id="nameInput" name="name" value="{{place.name}}">
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" name="type" id="typeInput1" value="Coffee Shop">
				<label class="form-check-label" for="typeInput1">
					Coffe Shop
				</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" name="type" id="typeInput2" value="Bookstore">
				<label class="form-check-label" for="typeInput2">
					Bookstore
				</label>
			</div>
			{{#if errorMsg}}
			<p id="error">{{errorMsg}}</p>
			{{/if}}
			<button type="submit" class="btn btn-success mt-3">Confirmar edici√≥n</button>
		</form>
	</div>
</div>