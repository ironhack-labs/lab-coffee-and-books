<div class="row justify-content-center">
	<div class="col-9">
		<h2 class="mb-4">Nuevo lugar</h2>
		<form action="/create" method="POST">
			<div class="mb-3">
				<label for="nameInput" class="form-label">Nombre</label>
				<input type="text" class="form-control" id="nameInput" name="name">
			</div>
			<div class="mb-3 row">
				<div class="col-6">
					<label for="latitudeInput" class="form-label">Latitud</label>
					<input type="text" class="form-control" id="latitudeInput" name="latitude">
				</div>
				<div class="col-6">
					<label for="longitudeInput" class="form-label">Longitud</label>
					<input type="text" class="form-control" id="longitudeInput" name="longitude">
				</div>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" name="type" id="typeInput1" value="Coffee Shop">
				<label class="form-check-label" for="typeInput1">
					Coffe Shop
				</label>
			</div>
			<div class="form-check">
				<input class="form-check-input" type="radio" name="type" id="typeInput2" value="Bookstore">
				<label class="form-check-label" for="typeInput2">
					Bookstore
				</label>
			</div>
			{{#if errorMsg}}
			<p id="error">{{errorMsg}}</p>
			{{/if}}
			<button type="submit" class="btn btn-success mt-3">Crear nuevo</button>
		</form>
	</div>
</div>