<div class="container">
    <div class="row justify-content-center">
     <div class="col-md-6">
         <h2>EDIT{{name}}</h2>
    
    <hr>

     <form action="/{{id}}/edit" method="POST">
         <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" name="name" value="{{name}}">
         </div>
         <div class="mb-3">
            <label for="descriptionInput" class="form-label">Descripci√≥n</label>
            <input type="text" class="form-control" rows="3" name="description" value="{{description}}">
        </div>
        <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <select name="type" class="form-select" multiple>
                    <option value="coffee shop">Coffee Shop</option>
                    <option value="bookstore">BookStore</option>
               </select>
        </div>
         <div class="mb-3">
             <label for="latitude" class="form-label">Latitud</label>
            <input type="text" class="form-control" name="lat" value="{{location.coordinates.[0]}}">
        </div>
         <div class="mb-3">
            <label for="longitude" class="form-label">Longitud</label>
            <input type="text" class="form-control" name="lng" value="{{location.coordinates.[1]}}">

        </div>

        <button type="submit" class="btn btn-dark">EDIT</button>
    </form>

    <hr>

    </div>
   </div>   
</div>