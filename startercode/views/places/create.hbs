<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Crear lugar</h1>

            <hr />

            <form action="/create" method="POST">

                <div class="mb-3">
                    <label for="placeName" class="form-label">name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="placeName"
                        name="placeName"
                    />
                </div>
                <div class="mb-3">
                    <div class="col-auto">
                        <label
                            class="visually-hidden"
                            for="autoSizingSelect"
                        >type</label>
                        <select
                            name="type"
                            class="form-select"
                            id="autoSizingSelect"
                        >

                            <option value="coffeshop">coffeshop</option>
                            <option value="bookstore">bookstore</option>

                        </select>

                    </div>
                </div>

                <div class="mb-3">
                    <label for="placelat" class="form-label">latitud</label>
                    <input
                        type="text"
                        class="form-control"
                        id="placelat"
                        name="lat"
                    />

                </div>

                <div class="mb-3">
                    <label for="placelat" class="form-label">longitud</label>
                    <input
                        type="text"
                        class="form-control"
                        id="placelong"
                        name="lng"
                    />

                </div>

                <button type="submit" class="btn btn-dark">Crear nuevo sitio</button>
                <a href="/" class="btn btn-dark">Volver al incio</a>
            </form>

            <hr />

        </div>
    </div>

</div>