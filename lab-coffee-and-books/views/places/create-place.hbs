<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>New Place</h1>

            <hr>

            <form action="/places/create" method="POST">
                <label>
                    Name: <input type="text" name="name" placeholder="name">
                </label>

                <label>
                    Type: <input type="text" name="type" placeholder="type">
                </label>

                <label>
                    Latitude: <input type="text" name="latitude" placeholder="latitude">
                </label>

                <label>
                    Longitude: <input type="text" name="longitude" placeholder="longitude">
                </label>

                <input type="submit" value="Create Place" class="btn-dark btn">
            </form>

        </div>
    </div>
</div>