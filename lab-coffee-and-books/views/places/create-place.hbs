<div class="container">


    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1>Create Place</h1>

            <hr>

            <form action="/places/create" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="coffeeShop" class="form-label">Coffee coffeeShop</label>
                    <input type="radio" class="form-control" id="coffeeShop" name="type" value="coffeeShop" required>


                    <label for="bookStore" class="form-label">Book Store</label>
                    <input type="radio" class="form-control" id="bookStore" name="type" value="bookStore">
                </div>
                <div class="mb-3">
                    <label for="lat" class="form-label">Latitud</label>
                    <input type="text" class="form-control" id="lat" name="lat">
                </div>
                <div class="mb-3">
                    <label for="lgn" class="form-label">Longitud</label>
                    <input type="text" class="form-control" id="lgn" name="lgn">
                </div>



                <button type="submit" class="btn btn-dark">Crear nuevo establecimiento</button>
                <a href="/" class="btn btn-dark">Volver al incio</a>
            </form>


            <hr>


        </div>
    </div>