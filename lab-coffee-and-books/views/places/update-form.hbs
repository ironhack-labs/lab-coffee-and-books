<h2>Update {{name}}</h2>

<hr>

<form action="/places/{{_id}}/edit" method="POST">
    <div class="row">
        <div class="col-md-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="{{name}}">
        </div>
        <div class="col-md-3">
            <label for="type">Type</label>
            <select name="type" id="type">

                <option>Coffee shop</option>

                <option>Bookstore</option>


            </select>
        </div>

        <div class="row">
            <div class="col-md-3">
                <label for="longitude">Longitud</label>
                <input type="text" name="longitude" value="{{location.coordinates.[0]}}">
            </div>
            <div class="col-md-3">

                <label for="latitude">Latitud</label>
                <input type="text" name="latitude" value="{{location.coordinates.[1]}}">
            </div>

        </div>
    </div>


    <button type="submit" class="btn btn-dark">Update place</button>
    <a href="/" class="btn btn-dark">HOME</a>
</form>