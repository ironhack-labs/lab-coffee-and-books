<div class="container mt-5">
    <h1>Lista de Sitios</h1>
    {{#each places}}
    <div class="row mt-5 mb-3">
        <div class="col-6">
            <h2>{{name}}</h2>
        </div>
        <div class="col-3">
            <a href="/places/{{_id}}/edit" class="btn btn-warning">Editar</a>
        </div>
        <div class="col-3">
            <form action="/places/{{id}}/delete" method="POST">
                <input type="submit" class="btn btn-danger" value="Eliminar">
            </form>
        </div>

    </div>
    <hr>
    {{/each}}
</div>