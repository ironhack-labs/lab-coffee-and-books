{{#with place}}
<form method="POST" action="/place/edit/{{id}}">

    <label for="name">Name:</label>
    <input type="text" name="name" value="{{name}}">

    <br>

    <label for="description">Description:</label>
    <input type="text" name="description" value="{{description}}">

    <br>

    <label>Address</label>
    <input type="text" name="latitude" value="{{location.coordinates.[0]}}">
    <input type="text" name="longitude" value="{{location.coordinates.[1]}}">

    <br>

    <label for="type">Type</label>
    <select name="type" id="type">
        <option value="{{type}}">{{type}}</option>
        <option value="Coffee">Coffee</option>
        <option value="Book">Bookshop</option>
    </select>

    <br>
    <button>Update place</button>
</form>
{{/with}}

<a href="/">Back to home</a>