<div class="row justify-content-center">

    <h1>Crear nuevo restaurante</h1>
    <hr>

    <div class="col-6">
        <form action="/create" method="POST">


            <div class="mb-3">
                <label for="name" class="form-label">Nombre del restaurante: </label>
                <input type="text" class="form-control" id="name" name="name">
            </div>

            <div class="mb-3">
                <label for="type" class="form-label">Tipo: </label>
                <input type="text" class="form-control" id="description" name="type">
            </div>

            <div class="mb-3">
                <label for="latitude" class="form-label">Latitud: </label>
                <input type="text" class="form-control" id="latitude" name="latitude">
            </div>

            <div class="mb-3">
                <label for="longitude" class="form-label">Longitud: </label>
                <input type="text" class="form-control" id="longitude" name="longitude">
            </div>

            <input type="submit" value="Crear restaurante" class="btn btn-dark">

        </form>

    </div>





</div>
</div>