<div class="container">
    <h2>Places editing</h2>

    <form action="/places/{{places_id}}/edit" method="POST">
        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" id="name" aria-describedby="emailHelp" value="{{name}}" name="name">
        </div>
        <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <input type="text" class="form-control" id="type" value="{{type}}" name="type">
        </div>
        <div class="mb-3">
            <label for="latitude" class="form-label">Latitude</label>
            <input type="text" class="form-control" id="latitude" value="{{location.coordinates.[0]}}" name="latitude">
        </div>
        <div class="mb-3">
            <label for="longitude" class="form-label">Longitude</label>
            <input type="text" class="form-control" id="longitude" value="{{location.coordinates.[1]}}"
                name="longitude">
            {{!-- En HBS los arrays se sacan con el punto a la izquierda --}}
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>