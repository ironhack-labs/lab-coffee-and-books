<div class="container">

    <div class="form">
        <h1>Edit a place!</h1>
        <form action="/places/edit/{{_id}}" method="POST">
            <div class="mb-3">
                <label for="name" class="form-label">Name of de coffee books</label>
                <input type="text" class="form-control" id="name" name="name" value="{{name}}">
            </div>



            <div class="mb-3">
                <label for="typeofplace" class="form-label">The type of this place is {{type}}</label>
                <select multiple id="typeofplace" class="form-select" name="type">

                    <option value='coffee shop'>Coffee shop</option>
                    <option value='bookstore'>Book Store</option>

                </select>

            </div>

            <div class="mb-3">
                <label for="latitude" class="form-label">Latitud</label>
                <input type="text" class="form-control" id="latitude" name="latitude"
                    value="{{location.coordinates.latitude}}">
            </div>
            <div class="mb-3">
                <label for="longitude" class="form-label">Longitude</label>
                <input type="text" class="form-control" id="longitude" name="longitude" value="{{longitude}}">
            </div>


            <button type="submit" class="btn btn-success">Edit!</button>
        </form>
    </div>
</div>