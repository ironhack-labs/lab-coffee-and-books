<div class="container">
    <div class="col mt-5 mb-5">
        <div class="text-center display-3">List lugares</div>
    </div>
    <div class="col-12">
        <div class="row">

            {{#each place}}
            <div class="col-12 p-4">
                <div class="row">
                    <div class="col-12">
                        {{name}}
                    </div>
                    <div class="col-12">
                        {{type}}
                    </div>
                    <div class="col-12">
                        {{latitud}}
                    </div>
                    <div class="col-12">
                        {{longitud}}
                    </div>
                    <div class="col-12 mt-5 mb-5">
                        <div class="row">
                            <div class="col-6 text-center p-3">
                                <a href="/places/{{id}}/edit" class="bg-primary p-3">Edit</a>
                            </div>
                            <div class="col-6 text-center">
                                <form action="/places/{{id}}/delete" method="POST">
                                    <button class="btn-sm btn-warning p-3 text-white" type="submit">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <div class="col-12 mt-5">
                <div class="row">
                    <div class="col-6 text-end p-3">
                        <a href="/" class="bg-info p-4">Back to menu</a>
                    </div>
                    <div class="col-6 text-start p-3">
                        <a href="places/create" class="bg-success p-3">New Place <i
                                class="bi bi-plus-circle-fill mx-3"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>