<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>New Place</h1>
            <hr>
            <form action="/places/create" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="type" class="form-label">Type</label>
                            <input type="text" class="form-control" id="type" name="type">
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label for="longitud" class="form-label">Longitude</label>
                    <input type="text" class="form-control" id="longitud" name="longitude">
                </div>

                <div class="mb-3">
                    <label for="latitude" class="form-label">Latitude</label>
                    <input type="text" class="form-control" id="latitude" name="latitude">
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Create</button>
                </div>
            </form>
        </div>
    </div>


</div>