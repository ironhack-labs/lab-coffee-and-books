<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            <h1>Edita "{{name}}"</h1>
            <form action="/places/{{id}}/editar" method="POST">
                <div class="mb-3">
                    <label for="placeName" class="form-label">Nombre del lugar:</label>
                    <input type="text" class="form-control" id="placeName" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="placeType" class="form-label">Tipo del lugar:</label>
                    <input type="text" class="form-control" id="placeType" name="type" value="{{type}}">
                </div>
                <div class="mb-3">
                    <label for="placeLat" class="form-label">Latitud:</label>
                    <input type="text" class="form-control" id="placeLat" name="lat"
                        value="{{location.coordinates.[0]}}">
                </div>
                <div class="mb-3">
                    <label for="placeLng" class="form-label">Longitud:</label>
                    <input type="text" class="form-control" id="placeLng" name="lng"
                        value="{{location.coordinates.[1]}}">
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
</div>