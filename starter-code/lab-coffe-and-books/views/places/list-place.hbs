<div class="container">
    <div class="row">


        {{#each places}}

        <div class="card m-3 text-center" style="width: 18rem;">
            <div class="card-header">
                {{name}}
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><a href="/places/list/{{_id}}/edit" class="btn btn-success">Update</a>
                </li>
                <li class="list-group-item">
                    <form action="/places/list/{{_id}}/delete" method="POST">

                        <button type="submit" class="btn btn-danger">DELETE</button>
                    </form>
                </li>
            </ul>
        </div>

        {{/each}}

    </div>
</div>