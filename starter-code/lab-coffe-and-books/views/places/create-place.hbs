<div class="container mt-5">
    <div class="row">
        <div class="col-md-6">
            <h1>New place</h1>
            <hr>
            <form action="/places/create" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name"
                                placeholder="Write character's name">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="type" class="form-label">Type</label>
                            <input type="text" class="form-control" id="type" name="type"
                                placeholder="Write COFFE SHOP or BOOKSTORE ">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="latitude" class="form-label">Latitude</label>
                            <input type="text" class="form-control" id="latitude" name="latitude"
                                placeholder="Write latitude! ">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="longitude" class="form-label">Longitude</label>
                            <input type="text" class="form-control" id="longitude" name="longitude"
                                placeholder="Write longitude! ">
                        </div>
                    </div>
                </div>




                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Create place</button>
                </div>
            </form>
        </div>
    </div>
</div>