  <body>
    <div class="container">
      </div>
      <div class="info">
        <h3>List all places</h3>
        <a href="/new">Create new place</a>
        <ul>
          <% places.forEach((place) => { %>
            <li>
              <a href="/<%= place._id%>">
                <%= place.name%><span><%= place.description %></span>
              </a>
               |
              <a href="/<%= place._id%>/edit">Edit</a>
               |
              <a href="/<%= place._id%>/delete">Delete</a>
            </li>


          <% }) %>
        </ul>
      </div>
    </div>

<!-- MAP -->
