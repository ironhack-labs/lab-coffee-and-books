<h3>EDIT RESTAURANT {{name}}</h3>
<form method="POST" action="/edit?placeId={{_id}}">
  <label>Name:</label>
  <input type="" name="name" placeholder="Name" value="{{name}}">
  <label>Description:</label>
  <input type="" name="description" placeholder="Description" value="{{description}}">
  <label>Address</label>
  <input type="text" name="latitude" id="latitude" placeholder="Latitude" value="{{location.coordinates.[1]}}">
  <input type="text" name="longitude" id="longitude" placeholder="Longitude" value="{{location.coordinates.[0]}}">
  <button type="submit" name="" id="submit">Edit</button>
  <button type="button" class="btn"><a href="/">Volver a las lista</a></button>
</form>