<form action="/{{place._id}}/edit" method="post">

    <label for="">Name:</label>
    <input type="text" name="name" value="{{place.name}}">

    <label for="">Description:</label>
    <input type="text" name="description" value="{{place.description}}">

    <label for="">Type:</label>
    <input type="text" name="type" value="{{place.type}}">

    <label>Address</label>
    <input type="text" name="latitude" placeholder="Latitude" value="{{place.location.cordinates.[0]}}">
    <input type="text" name="longitude" placeholder="Longitude" value="{{place.location.cordinates.[1]}}">

    <button type="submit">EDIT</button>
</form>