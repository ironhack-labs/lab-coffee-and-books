<div class="container">

  <h2>Modificar</h2>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/celebrities/edit?cellId={{_id}}" method="POST">
        <div class="form-group">
          <label for="field1">Nombre: </label>
          <input type="text" class="form-control" id="field1" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="field2">Type: </label>
          <input type="text" class="form-control" id="field2" name="type" value="{{type}}">
        </div>

        <button type="submit" class="btn btn-dark">Modificar un famoso</button>
      </form>
      <p>
        <a href="/celebrities">Volver</a>
      </p>

    </div>
  </div>
</div>