<section>
<div class = "flex">
    <div>
        <h2>Create a new place</h2><br>
        <form action="/" method="POST">
            <p>Name: </p><input type="text" label="Name: " name="name">
            <p>Type: </p><input type="text" label="type: " name="type">
            <p>Long: </p><input type="text" label="lgt: " name="lgt">
            <p>Latitude: </p><input type="text" label="ltd: " name="ltd">
            <button type="submit">Add</button>
        </form>
    </div>
    <div>
    <h2>Places</h2>
    {{#each places}}
    <p>{{this.name}}</p><br>
    <form action="/{{this.id}}/delete" method="post"><button type="submit">DELETE</button></form>
    {{/each}}
</div>

</div>
<div id="map"></div>
</section>