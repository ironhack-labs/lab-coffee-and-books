<section>
  <h2>Our Places</h2>
  {{#each place}}
  <p>Name</p>
  <h3>{{name}}</h3>
  <p>Kind of Place</p>
  <h3>{{type}}</h3>
  <div class="btn-flex">
    <form action="/{{_id}}/delete" method="post"><button class="btn-menu" type="submit">Delete</button></form>
    <button class="btn-menu"><a href="/{{_id}}/show">Update a Place</a></button>
  </div>
  {{/each}}
  <p>{{error}}</p>
  <div class="btn-flex">
    <button class="btn-menu-dif"><a href="/new">Add a new place</a></button>
    <button class="btn-menu-dif" id="multiple-points">Show me the Places</button>
  </div>
</section>



<div id="map"></div>
<script>
  // https://developers.google.com/maps/documentation/javascript/reference
  let map;

  function initMap() {
    map = new google.maps.Map(document.getElementById("map"), {
      center: new google.maps.LatLng(40.3922301, -3.6998982),
      zoom: 15
    });
  }

  //Multiple-points

  document.querySelector("#multiple-points").onclick = function () {
    let shops = [
      {
        coords: new google.maps.LatLng(40.3922301, -3.42),
        name: "zapatillas comet"
      },
      {
        coords: new google.maps.LatLng(40.3722301, -3.72),
        name: "el patÃ­n de oro"
      },
      {
        coords: new google.maps.LatLng(40.3922301, -3.52),
        name: "test"
      }
    ];

    let statues = [
      {
        coords: new google.maps.LatLng(40.3922305, -3.49),
        name: "carlos v"
      },
      {
        coords: new google.maps.LatLng(40.3722305, -3.79),
        name: "la cibeles"
      }
    ];

    statues.forEach(statueInfo => {

      new google.maps.Marker({
        position: statueInfo.coords,
        map: map,
        title: statueInfo.name,
      });
    });

    shops.forEach(shopInfo => {

      new google.maps.Marker({
        position: shopInfo.coords,
        map: map,
        title: shopInfo.name,
      });
    });
  };

</script>
<script src="https://maps.googleapis.com/maps/api/js?key=&callback=initMap" async
  defer></script>
