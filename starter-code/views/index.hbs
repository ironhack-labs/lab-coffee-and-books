<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>{{title}}</h1>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div id="store-map"></div>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6"><a href="/create" class="btn btn-dark create-btn">Create a new entry</a></div>
  </div>
  <div class="row">
    {{#each places}}
    <div class="col-md-4">
      <article class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <h6 class="card-subtitle mb-2 text-muted place-type">{{type}}</h6>
          <div class="d-flex justify-content-around"> 
            <a href="/edit/{{_id}}" class="btn card-link">Edit</a>
            <form action="/delete/{{_id}}" method="post">
            <button type="submit" class="btn card-link">Delete</button>
            </form>
          </div>

        </div>
      </article>
    </div>
    {{/each}}
  </div>
</div>