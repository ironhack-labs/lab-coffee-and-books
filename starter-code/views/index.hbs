<section>
  <h2>Our Places</h2>
  {{#each place}}
  <h3>{{name}}</h3>
  <h3>{{type}}</h3>
  <form action="/{{_id}}/delete" method="post"><button class="btn-menu" type="submit">Delete</button></form>
  <button class="btn-menu"><a href="/{{_id}}/show">Update a Place</a></button>
  {{/each}}
  <p>{{error}}</p>
  <div>
    <button class="btn-menu"><a href="/new">Add a new place</a></button>
  </div>
  <div>
    <button id="multiple-points">Show me the Places</button>
  </div>
</section>



<div id="map"></div>
<script>
  // https://developers.google.com/maps/documentation/javascript/reference
  let map;

  function initMap() {
    map = new google.maps.Map(document.getElementById("map"), {
      center: new google.maps.LatLng(40.3922301, -3.6998982),
      zoom: 15
    });
  }

  //Multiple-points

      document.querySelector("#multiple-points").onclick = function() {
        let shops = [
