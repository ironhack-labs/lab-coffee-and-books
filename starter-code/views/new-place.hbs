<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>Create a New Place</h2>

            <hr>

            <form action="/new" method="POST">

                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Type</label>
                    <select name="type" id="type">

                        <option value="coffee shop">Coffee shop</option>
                        <option value="bookstore">Bookstore</option>

                    </select>

                </div>
                <div class="mb-3">
                    <label for="latitude" class="form-label">Latitude</label>
                    <input latitude="text" class="form-control" id="latitude" name="latitude">
                </div>
                <div class="mb-3">
                    <label for="longitude" class="form-label">Longitude</label>
                    <input type="text" class="form-control" id="longitude" name="longitude">
                </div>


                <button type="submit" class="btn btn-dark">Create a New Place</button>
                <a href="/places" class="btn btn-dark">Back to Places</a>
            </form>


            <hr>


        </div>
    </div>


</div>