<h1>Nuevo Place en {{title}}</h1>
<hr>


<form action="/places/add" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name">

    <label for="type">Type:</label>
    <select name="type">
      <option value="coffeeShop">Coffee Shop</option>
      <option value="bookStore">Book Store</option>
    </select>

    <br>
    <br>

    <label>Address<br>
        <input type="text" name="latitude" placeholder="latitude"><br>
        <input type="text" name="longitude" placeholder="longitude"><br><br>
    </label>

    <button type="submit">ADD</button>
</form>