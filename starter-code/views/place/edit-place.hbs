<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-5">

            <h1>Edit {{name}}</h1>

            <form action="/libros/editar/{{_id}}" method="post">
                <div class="form-group">
                    <label for="title">Name</label>
                    <input name="title" type="text" class="form-control" id="title" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="description">Type</label>
                    <input name="description" type="text" class="form-control" id="description" value="{{type}}">
                </div>

                <button type="submit" class="btn btn-dark">Edit establishment</button>
            </form>
        </div>
    </div>