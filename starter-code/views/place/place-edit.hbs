<h1>Nuevo Place en {{title}}</h1>
<hr>


<form action="/places/edit/{{_id}}" method="post">
    <label for="name">Name:</label>
    <input type="text" name="name" value="{{name}}">

    <label for="type">Type:</label>
    <select name="type">
      <option value="coffeeShop">Coffee Shop</option>
      <option value="bookStore">Book Store</option>
    </select>

    <br>
    <br>

    <label>Address<br>
        <input type="text" name="latitude" value="{{location.coordinates.[0]}}"><br>
        <input type="text" name="longitude" value="{{location.coordinates.[1]}}"><br><br>
    </label>

    <button type="submit">Edit</button>
</form>