
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">

        <h2>Edit Bar</h2>
        <form method="POST" action="/{{id}}/edit">
            <div class="form-group">
                <label for="detail1">Name</label>
                <input type="text" class="form-control" id="detail1" name="name" value="{{name}}">
            </div>
            <div class="form-group">
                <label for="detail2">Occupation</label>
                <input type="text" class="form-control" id="detail2" name="type" value="{{type}}">
            </div>
            <div class="form-group">
                <label for="detail3">Latitude</label>
                <input type="text" class="form-control" id="detail3" name="lat">
            </div>
            <div class="form-group">
                <label for="detail3">Longitude</label>
                <input type="text" class="form-control" id="detail3" name="lng">
            </div>
            <button type="submit" class="btn btn-dark">Edit</button>
        </form>

        </div>
    </div>

</div>