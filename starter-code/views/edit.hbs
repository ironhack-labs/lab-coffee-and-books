<div class="row justify-content-center">
  <div class="col-md-6">

    <h1>Â¡Editar un nuevo sitio!</h1>

    <form action="/details/{{id}}/edit" method="POST">
      <div class="form-group">
        <label for="field1">Nombre</label>
        <input name="name" type="text" class="form-control" id="field1" value="{{name}}">
      </div>
      <div class="form-group">
        <label for="field2"></label>
        <select name="type" class="form-control" id="field2">
          <option value="Cofee shop">Cofee shop</option>
          <option value="Bookstore">Bookstore</option>
        </select>
      </div>
      <div class="form-group">
        <label for="field3">Longitud</label>
        <input name="longitude" type="text" class="form-control" id="field3" value="{{location.coordinates.[0]}}">
      </div>
      <div class="form-group">
        <label for="field4">Latitud</label>
        <input name="latitude" type="text" class="form-control" id="field4" value="{{location.coordinates.[1]}}">
      </div>

      <button type="submit" class="btn btn-dark">Editar Sitio</button>
    </form>
  </div>
</div>