<div class="container">

  <form method="POST" action="/place/{{_id}}/edit">

    <div class="row">
      <div class="col-md-6">
        <div class="form-group">
          <h3>Edit {{name}}</h3>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <label>Name</label>
        </div>
        <div class="form-group">
          <input type="text" name="name" placeholder="{{name}}">
          <input type="text" name="description" placeholder="{{description}}">
        </div>

        <div class="form-group">
          <label>Address:</label>
        </div>
        <div class="form-group"></div>
        <input type="text" name="latitude" placeholder="{{location.coordinates.[1]}}">
        <input type="text" name="longitude" placeholder="{{location.coordinates.[0]}}">
      </div>


      <input type="submit" class="btn btn-dark" name="">


  </form>
  <a href="/place" class="btn btn-dark">Back to list</a>
</div>

</div>
</div>