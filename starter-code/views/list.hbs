<div class="container">
    <div class="row justify-content-center">
        {{#each places}}
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">Coffee and Books</h5>

                <p>{{name}}</p>


                <p class="card-text">Alguna descripción de la cafeteria o librería</p>
                <a href="/places/editar/{{_id}}" class="btn btn-dark">Edit</a>
                <form action="/places/eliminar/{{_id}}" method="POST" style="display: inline">
                    <input type="submit" value="Eliminar" class="btn btn-danger">
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>