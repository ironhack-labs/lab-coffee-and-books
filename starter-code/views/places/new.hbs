<main>

  <h2>Create a place</h2>

  <form action="/places/new" method = "post">

    <div class="form-group">
      <label for="name">Name</label>
      <input name = "name" type="text" class="form-control" id="name">
      
    </div>

    <div class="form-group">
      <label for="type">Tipo</label>
      <select name = "type" type="text" class="form-control" id="type">
        <option>Seleccionar</option>
        <option>Coffe Shop</option>
        <option>Bookstore</option>
      </select>
    </div>

    <div class="form-group">
      <label>Address</label>
      <input name = "latitude" type="number" step=any class="form-control" id="latitude">
      <input name = "longitude" type="number" step=any class="form-control" id="longitude">
      
    </div>

    <button type="submit" class="btn btn-outline-dark">Submit</button>
    
  </form>

</main>