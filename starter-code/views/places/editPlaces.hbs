<div class="container">

    <h1>Edit place</h1>

    <div class="row justify-content-center">

        <div class="col-md-8">

            <form action="/places/edit?placeId={{_id}}" method="POST">
                <div class="form-group">
                    <label for="field1">Nombre</label>
                    <input type="text" class="form-control" id="field1" name="name" value="{{name}}">

                </div>
                <div class="form-group">
                    <label for="field2">type of place:</label>
                    <input type="text" class="form-control" id="field2" name="type" value="{{type}}">
                </div>
                <br>
                <input type="text" name="latitude" placeholder="latitude" value="{{location.coordinates.[1]}}">
                <input type="text" name="longitude" placeholder="longitude" value="{{location.coordinates.[0]}}">
                <br>
                <button type="submit" class="btn btn-dark">Update place</button>
            </form>

        </div>
    </div>
</div>