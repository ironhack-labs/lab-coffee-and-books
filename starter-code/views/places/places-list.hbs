<div class="container">
    <div class="row justify-content-center text-center mt-5">
        <div class="col-12">
            <div class="row justify-content-around text-center ">

                <h2>Places List</h2>
                <hr>
                {{#each places}}
                <div class="col-2">
                    <h3>Name</h3>
                    <p>{{name}}</p>
                </div>

                <div class="col-2">
                    <h5>Type</h5>
                    <p>{{type}}</p>
                </div>


                <div class="col-2">
                    <a class="btn btn-dark" href="/places/{{_id}}/edit">Edit</a>


                    <form action="/places/{{_id}}/delete" method="POST">
                        <button class="btn btn-danger mt-2 mb-2" type="submit">Delete</button>
                    </form>
                </div>

                <hr>
                {{/each}}
            </div>
            <div class="col-12">
                <figure id="myMap"></figure>
                <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

                <script src="./js/script.js"></script>
                <script src="https://maps.googleapis.com/maps/api/js?key=__key_____&callback=init"></script>
            </div>


        </div>
    </div>
</div>