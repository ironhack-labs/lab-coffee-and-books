<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Nuevo lugar</h1>
    </div>

    <div class="col-md-6">

      <form action="/places/new" method="POST">

        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input">
        </div>

        <div class="form-group">
          <label for="type-list">Tipo:</label>
          <select name="type" class="form-control" id="type-list">
            <option>Seleccionar</option>
            <option value="coffee shop">Coffee Shop</option>
            <option value="bookstore">Bookstore</option>
          </select>
        </div>

        <div class="form-group">
          <label for="latitude-input">Latitud</label>
          <input name="latitude" type="text" class="form-control" id="latitude-input">
        </div>

        <div class="form-group">
          <label for="longitude-input">Longitud</label>
          <input name="longitude" type="text" class="form-control" id="longitude-input">
        </div>

        <button type="submit" class="btn btn-success">Crear lugar</button>
        <a href="/places" class="btn btn-dark">Volver</a>

      </form>

    </div>

  </div>

</div>