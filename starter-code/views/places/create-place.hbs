<div class="container back-places" >

  <div class="row" >

    <div class="col-md-6">
      <h2>Agrega un nuevo lugar_</h2>
    </div>

    <div class="col-md-6">
      <form action="/places/new" method="post" class="form-style">
        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input">
        </div>
        <div class="form-group">
          <label for="description">¿Es un coffee shop o un bookstore?</label>
          <p><input name="description" type="radio"  id="coffee-shop" value="coffee shop"> coffee shop</p>
          <p><input name="description" type="radio"  id="bookstore" value="bookstore"> bookstore</p>
        </div>
        <hr>
        <div class="form-group">
          <label for="direction" class="label-form">¿Dónde se encuentra?</label>
          <p>Latitud </p>
          <input type="text" name="lat" class="form-control">
          <br>
          <p>Longitud</p> <input type="text" name="long" class="form-control">
          <br>
          <p>Dirección</p> <input type="text" name="address" class="form-control">
        </div>
       
        <button type="submit" class="btn btn-dark">Crear lugar</button>
        <a href="/places" class="btn btn-dark">Volver</a>
      </form>
      
    </div>

  </div>
</div>