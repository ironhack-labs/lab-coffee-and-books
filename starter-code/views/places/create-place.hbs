<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Add a new place</h2>
            <form action="/places/add-place" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Place's name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Place's type</label>
                    <input type="text" class="form-control" id="type" name="type">
                </div>
                <div class="mb-3">
                    <label for="latitude" class="form-label">Latitude</label>
                    <input type="text" class="form-control" id="latitude" name="latitude">
                </div>
                <div class="mb-3">
                    <label for="longitude" class="form-label">Longitude</label>
                    <input type="text" class="form-control" id="longitude" name="longitude">
                </div>
                <button type="submit" class="btn btn-dark">Add place</button>
            </form>
        </div>
    </div>
    <a class="btn btn-secondary d-flex-inline justify-content-center align-items-end" href="/">Main page</a>
</div>