<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Create a new place</h1>
    </div>

    <div class="col-md-6">

      <form action="{{newPlace}}" method="post">

        <div class="form-group">

          <label for="name-input">Name</label>
          <input name="name" type="text" class="form-control" id="name-input" required>
        
        </div>

        <div class="form-group">
        
          <label for="latitude-input">Latitude</label>
          <input name="latitude" type="text" class="form-control" id="latitude-input" required>
        
        </div>

        <div class="form-group">
        
          <label for="longitude-input">Longitude</label>
          <input name="longitude" type="text" class="form-control" id="longitude-input" required>
        
        </div>

        <div class="form-group">

          <label for="type-list">Type</label>
          <select name="type" class="form-control" id="type-list" required>
            
            <option value="" disabled selected>Seleccionar</option>
            <option value="coffe shop">Coffe Shop</option>
            <option value="bookstore">Bookstore</option>

          </select>

        </div>

        <button type="submit" class="btn btn-dark">Create</button>
        <a href="/" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
</div>