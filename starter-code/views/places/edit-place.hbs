<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1>Edit Place</h1>
        </div>

        <div class="col-md-6">

            <form action="edit/?id={{id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="description-input">Description</label>
                    <textarea name="description" class="form-control" id="description-input"
                        rows="3">{{description}}</textarea>
                </div>
                <div class="form-group">
                    <label for="name-input">Latitude</label>
                    <input name="latitude" type="text" class="form-control" id="name-input"
                        value="{{location.coordinates.[0]}}">
                </div>
                <div class="form-group">
                    <label for="name-input">Longitude</label>
                    <input name="longitude" type="text" class="form-control" id="name-input"
                        value="{{location.coordinates.[1]}}">
                </div>
                <div class="form-group">
                    <label for="park-list">Place:</label>
                    <select name="place" class="form-control" id="park-list">
                        <option>Seleccionar</option>
                        <option value="coffee shop">Coffee Shop</option>
                        <option value="bookstore">Book Store</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-dark">Edit Place</button>
                <a href="/" class="btn btn-dark">Go back</a>

            </form>
        </div>

    </div>
</div>