<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Editar {{thePlace.name}}</h1>
    </div>

    <div class="col-md-6">

      <form action="/places/edit/{{thePlace.id}}" method="post">
        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input" value="{{thePlace.name}}">
        </div>
        <div class="form-group">
          <label for="type">Tipo de lugar</label>
          <select name="type" class="form-control" id="type">
            

            <option value="coffe shop">Coffe Shop</option>
            <option value="bookstore">Bookstore</option>
          </select>
          <label>Address</label>
          <input class="form-group" type="text" name="latitude" id="latitude" placeholder="Latitude"
            value="{{ thePlace.location.coordinates.[1]}}">
          <input class="form-group" type="text" name="longitude" id="longitude" placeholder="Longitude"
            value="{{ thePlace.location.coordinates.[0]}}">
        </div>

        <button type="submit" class="btn btn-dark">Editar</button>
        <a href="/places" class="btn btn-dark">Volver</a>

      </form>
    </div>

  </div>
  