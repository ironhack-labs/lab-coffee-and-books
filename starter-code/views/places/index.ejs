<!DOCTYPE html>
<html>
  <head>
    <title>The Best Coffee and Bookstore on Earth</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div class="container">
      </div>
      <div class="info">
        <h3>List all Coffees ;-)</h3>
        <a href="/new">Create new coffee shop (and books)</a>
        <ul>
          <% places.forEach((place) => { %>
            <li>
              <a href="/<%= place._id%>">
                <%= place.name%><span><%= place.description %></span>
              </a>
            </li>
          <% }) %>
        </ul>
      </div>
      <div id="map"></div>
    </div>
  </body>
  <script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAtou5WzJkLsEtspJTSR7Wm4m2pnJc8lRo">
  </script>
  <script src="https://code.jquery.com/jquery-3.1.1.min.js" integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8=" crossorigin="anonymous"></script>
  <script> var myplaces = <%- JSON.stringify(places) %> ;</script>
  <script type="text/javascript" src="/javascripts/main.js"></script>
</html>
