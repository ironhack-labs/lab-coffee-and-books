<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h1>Edit {{name}}</h1>

            <form method="POST" action="/places/edit-place?place_id={{_id}}">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label>Type</label>
                    <input type="text" class="form-control" name="type" value="{{type}}">
                </div>
                <button type="submit" class="btn btn-dark">Save edit</button>
            </form>
        </div>
    </div>



</div>