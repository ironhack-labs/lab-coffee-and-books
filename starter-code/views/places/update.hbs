<h3>Add new Place</h3>
<form method="POST" action="/places/{{ place._id}}">
    <input type="text" name="name" value="{{ place.name}}">
    <select name="type" value="{{ place.type}}">
      <option value="coffe shop">Coffe Shop</option>
      <option value="bookstore">Bookstore</option>
    </select>
      
    <label>Address</label>
    <input type="text" name="latitude" value="{{place.location.coordinates.[0]}}" >
    <input type="text" name="longitude" value="{{place.location.coordinates.[1]}}">

    <button type="submit" name="" id="submit">Update</button>
</form>
<a href="/places">Back to the list</a>