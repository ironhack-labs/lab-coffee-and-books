<div class="container">
    <div class="container-places">

        <h1>LIST OF PLACES</h1>

        <div>
            {{#each newPlaces}}
            <div class="places">
                <hr>
                <a href="/places/{{id}}">
                    {{name}}
                </a>
                <a href="/places/{{id}}">
                    {{type}}
                </a>

            </div>
            <div class="buttons">
                <div>
                    <a href="places/{{id}}/edit" class="btn btn-sm btn-dark">EDIT</a>
                </div>
                <div>
                    <form action="places/{{id}}/delete" method="POST">
                        <button class="btn btn-sm btn-dark" type="submit">DELETE</button>
                    </form>
                </div>
            </div>
            {{/each}}

            <hr>
            <a href="/" class="btn btn-dark">HOME</a>

        </div>

        <style>
            #placesMap {
                height: 300px;
                background-color: red;
            }
        </style>

        <figure id="placesMap"></figure>

    </div>




    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="/js/init-map.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=______TU_API_KEY_____&callback=initMap"></script>