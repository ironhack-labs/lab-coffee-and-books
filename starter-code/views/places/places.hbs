<div class="container">
    <h1>Places</h1>
    <hr>
    <div class="row">
        {{#each places}}
        <div class="col-3 mb-5 mt-5">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <h6 class="card-subtitle mb-2 text-muted">{{type}}</h6>
                    <p class="card-text">Location: {{location.coordinates}}</p>
                    <a href="/places/edit/{{id}}" class="btn btn-warning btn-sm">Edit</a>
                    <form action="/places/delete/{{id}}" method="POST" style="display: inline-block">
                        <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>


<a href="/">Volver al inicio</a>
</div>