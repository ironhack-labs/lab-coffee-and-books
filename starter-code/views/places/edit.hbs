<div class="container">

  <div class="row justify-content-center">

    <div class="col-md-7">

      <h2>Edit</h2>

      <form method="POST" action="/places/edit-place?place_id={{_id}}">

        <div class="form-group">
          <label>Name</label>
          <input type="text" class="form-control" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label>Type</label>
          <input type="text" class="form-control" name="type" value="{{type}}">
        </div>
        <div class="form-group">
          <label>Location</label>
          <input type="text" class="form-control" name="latitude" placeholder="latitude" value="{{location.coordinates.[0]}}">  <br>
          <input type="text" class="form-control" name="longitude" placeholder="longitude" value="{{location.coordinates.[1]}}">
          </div>
        <button type="submit" class="btn btn-info btn-block">Edit</button>
      </form>
    </div>
  </div>

</div>