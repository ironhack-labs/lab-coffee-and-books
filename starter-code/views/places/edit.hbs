<h1>Edit Place</h1>


<form action="/places/edit/{{id}}" method="post">
  <label for="name">Name:</label>
  <input type="text" name="name" id="name" value="{{place.name}}">

  <label for="type">Type:</label>
  <select name="type" id="type">
    <option value="COFFEE SHOP" {{#if COFFEESHOP}}selected{{/if}}>Coffee Shop</option>
    <option value="BOOKSTORE" {{#if BOOKSTORE}}selected{{/if}}>bookstore</option>
  </select>

      <label>Address</label>
  <input type="text" name="latitude" placeholder="latitude" value="{{places.lat}}">
  <input type="text" name="longitude" placeholder="longitude" value="{{places.lng}}">


  <button type="submit">Edit Place</button>
</form>

<a href="/places">Go Back</a> 