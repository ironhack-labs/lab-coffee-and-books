<h2>Edit a place</h2>
<form action="../{{place._id}}" method="post">
<label>Name: <input type="text" name="name" value="{{place.name}}"></label><br><br>
<label>Type: 
    <select name="type">
        <option selected="selected" value="{{place.type}}">Cofee shop</option>
        <option value="cofee shop">Coffee shop</option>
        <option value="bookstore">Bookstore</option>
    </select><br><br>
    <label>Address</label>
  <input type="text" name="latitude" placeholder="latitude" value="{{place.lat}}">
  <input type="text" name="longitude" placeholder="longitude" value="{{place.lng}}">
    <br><br>
<button type="submit">Send</button>
</form>