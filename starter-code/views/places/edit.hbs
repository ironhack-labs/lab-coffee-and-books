<div class="container">

  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Editar {{name}}</h1>
    </div>

    <div class="col-md-6">

      <form action="/places/edit?id={{id}}" method="POST">

        <div class="form-group">

          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input" value='{{name}}'>
        </div>

        <div class="form-group">
          <label for="type-input">¿Qué tipo de Coffee es?</label>
          <select name="type" class="form-control" id="type-input">
            <option>Seleccionar</option>
            <option>Coffee Shop</option>
            <option>Bookstore</option>
          </select>
        </div>
        <div class="form-group">
          <strong>¿Dónde se encuentra?</strong>
          <br>
          <br>
          <label for="latitude-input">Latitud</label>
          <input name="latitude" type="text" class="form-control" id="latitude-input" value="{{location.coordinates.[0]}}">
          <label for="longitude-input">Longitud</label>
          <input name="longitude" type="text" class="form-control" id="longitude-input" value="{{location.coordinates.[1]}}">
        </div>
        <div class="form-group">
        </div>

        {{#if errorMsg}}
      <div style="background: red; color: white; text-align: center; padding: 10px; margin-top:10px">
        {{errorMsg}}</div>
            {{/if}}
          <br>
    
        <button type="submit" class="btn btn-dark">Editar ficha de {{name}}</button>
        <a href="/places" class="btn btn-dark">Volver</a>


      </form>
    </div>

  </div>
</div>