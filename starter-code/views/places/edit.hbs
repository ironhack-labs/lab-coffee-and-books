<div class="container mt-5">

  <div class="row justify-content-center">
    <div class="col-md-6">
      <h1>Edit place:</h1>

      <form action="/place/edit/{{_id}}" method="POST">
        <div class="row">
          <div class="col">
            <div class="mb-3">
              <label for="name" class="form-label">Name</label>
              <input type="text" class="form-control" id="name" name="name" value="{{name}}">
            </div>
          </div>
          <div class="col">
            <div class="mb-3">
              <label for="type" class="form-label">Type of place</label>
              <input type="text" class="form-control" id="type" name="type" value="{{type}}">
            </div>
          </div>
        </div>
        <div class="col">
          <div class="mb-3">
            <label for="latitude" class="form-label">Latitude</label>
            <input type="text" class="form-control" id="latitude" name="latitude" value="{{location.coordinates.[0]}}">
          </div>
        </div>
        <div class=" col">
          <div class="mb-3">
            <label for="longitude" class="form-label">Longitude</label>
            <input type="text" class="form-control" id="longitude" name="longitude"
              value="{{location.coordinates.[1]}}">
          </div>
        </div>


        <div class="d-grid mt-5">
          <button type="submit" class="btn btn-dark btn-lg">Edit place</button>
        </div>
      </form>
    </div>
  </div>
</div>