<form action="/place/{{id}}/edit" method="POST">
    <div class="form-group row">
        <label for="staticEmail" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" name="name" id="" value="{{name}}">
        </div>
    </div>
    <div class="form-group row">
        <label for="inputPassword" class="col-sm-2 col-form-label">Type</label>
        <div class="col-sm-10">
            <select name="type" value={{type}} id="" onchange="">
                <option value="coffeShop">Coffe Shop</option>
                <option value="bookStore">Bookstore</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mb-2">Edit</button>
</form>