<div class="container">

	<div class="row justify-content-center">

		<div class="col-md-8">

			<h1>Editar lugar</h1>

			<form action="/cafeterias/editar/{{_id}}" method="POST">

				<div class="mb-3">
					<label for="name" class="form-label"></label>
					<input type="text" class="form-control" id="name" name="name" value="{{name}}" />
				</div>
				<div class="mb-3">
					<label for="type" class="form-label">Tipo</label>
					<input type="text" class="form-control" id="type" name="type" value="{{type}}" />
					<div class="form-text">Cafeter√≠a o Tienda.</div>
				</div>
				<div class="mb-3 col">
					<label for="lat" class="form-label">Latitud</label>
					<input type="text" class="form-control" id="lat" name="lat" value="{{location.coordinates.[0]}}" />
				</div>
				<div class="mb-3 col">
					<label for="lng" class="form-label">Longitud</label>
					<input type="text" class="form-control" id="lng" name="lng" value="{{location.coordinates.[1]}}" />
				</div>
				<div class="d-grid gap-2 m-2">
					<button type="submit" class="btn btn-dark block">Actualizar lugar</button>
				</div>
			</form>
		</div>
	</div>

</div>