<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <article class="mb-5">
                <h3>{{name}}</h3>
                <hr>
                <p>Tipo: {{type}}</p>
                <p>Latitud: {{location.coordinates.[0]}}</p>
                <p>Longitud: {{location.coordinates.[1]}}</p>
                <div class="d-grid">
                    <a href="/places/list/{{id}}/edit" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/places/list/{{_id}}/delete" method="POST">
                        <input type="submit" value="Delete" class="btn btn-outline-danger mb-3">
                    </form>
                </div>
            </article>
        </div>
    </div>
</div>
