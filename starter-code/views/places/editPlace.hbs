<div class="container">

  <h1>Editar el restaurante {{name}}</h1>

  <div class="row justify-content-center">

    <div class="col-md-8">

      <form action="/places/edit?placeId={{_id}}" method="POST">
        <div class="form-group">
          <label for="field1">Nombre</label>
          <input type="text" class="form-control" id="field1" name="name" value="{{name}}">
        </div>
        <div class="form-group">
          <label for="field2">Tipo</label>
          <select name="type" id="field2">
            <option value="cofee-shop">cofee-shop</option>
            <option value="bookstore" selected>bookstore</option>
          </select>
          {{!-- <input type="text" class="form-control" id="field2" name="type" value="{{type}}"> --}}
        </div>


        <button type="submit" class="btn btn-primary">Actualizar restaurante</button>
      </form>

    </div>
  </div>
</div>