<div class="container">

    <h3>Create new place</h3>
    <hr>
    <form method="POST" action="/places/new">
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="name" placeholder="Name"><br><br>
        </div>
        <div class="form-group">
            <label>Type</label>
            <input type="text" name="type" placeholder="Type"><br><br>
             </div>
            <div class="form-group">
                <label>Latitude</label>
            <input type="text" name="latitude" placeholder="Latitude"><br><br>
               <label>Longitude</label>
            <input type="text" name="longitude" placeholder="Longitude"><br><br>
            <input type="submit" value="Create new place">
    </form>
</div>