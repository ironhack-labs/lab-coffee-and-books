<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-7">

            <h2>Add New Place</h2>

            <form method="POST" action="/places/new-place">

                <div class="form-group">
                    <label>Name</label>
                    <input type="text" class="form-control" name="title" value="{{name}}">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <input type="text" class="form-control" name="genre" value="{{descrption}}">
                </div>
                <div class="form-group">
                    <label>Type</label>
                    <input type="text" class="form-control" name="genre" value="{{type}}">
                </div>
                <div class="form-group">
                    <label>Location</label>
                    <input type="text" class="form-control" name="plot" value="{{location}}">
                </div>
                <button type="submit" class="btn btn-dark">Create</button>
            </form>
        </div>
    </div>



</div>