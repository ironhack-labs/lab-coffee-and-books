<div class="container">

    <h1>Create Place</h1>

    <div class="row justify-content-center">

        <div class="col-md-8">

            <form action="/places/add" method="POST">
                <div class="form-group">
                    <label for="field1">Name</label>
                    <input type="text" class="form-control" id="field1" name="name">
                </div>
                <div class="form-group">
                    <label for="field2">Type</label>
                    <input type="text" class="form-control" id="field2" name="type">
                </div>
                <br>
                <input type="text" name="latitude" placeholder="latitude">
                <input type="text" name="longitude" placeholder="longitude">
                <br>
                <button type="submit" class="btn btn-dark">Create a Place</button>
            </form>

        </div>
    </div>
</div>