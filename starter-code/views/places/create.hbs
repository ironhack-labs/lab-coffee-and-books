<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Nuevo Lugar</h1>
            <hr>
            <form action="/places/create" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="type" class="form-label">Tipo de Lugar</label>
                        <input type="text" class="form-control" id="type" name="type" placeholder="Tienda | Cafeteria">
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="latitude" class="form-label">Latitud</label>
                            <input type="text" class="form-control" id="latitude" name="latitude">
                        </div>
                        <div class="mb-3">
                            <label for="longitude" class="form-label">Longitud</label>
                            <input type="text" class="form-control" id="longitude" name="longitude">
                        </div>
                    </div>
                </div>
                <div class="d-grid mt-5">
                    <input type="submit" class="btn btn-dark btn-lg" value="Crear Lugar"></input>
                </div>
            </form>
        </div>
    </div>
