<div class="container">
	<h1 class="pb-5">Todos las cafeter√≠as</h1>

	<div class="row gap-3 mb-5">
		{{#each cafeterias}}
			<div class="card p-3" style="max-width: 300px;">
				<div class="row flex-column justify-content-around align-items-center">
					<h2>{{name}}</h2>
				</div>
				<a href="/cafeterias/editar/{{_id}}" class="btn btn-warning list-btn" style="max-width: max-content;">Editar</a>
				<form action="/cafeteria/borrar/{{_id}}" method="POST">
					<button type="submit" class="btn btn-danger list-btn">Borrar</button>
				</form>
			</div>
		{{/each}}
	</div>
	<a href="/" class="mt-4 btn btn-dark">Volver a inicio</a>
</div>