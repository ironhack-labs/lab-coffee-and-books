<h2 class="margin-left">Editando a {{name}}</h2>


<div class="container">

  <form action="/places/edit/{{_id}}" method="post">
    <div class="form-group">
      <label for="name">Nombre: </label>
      <input type="text" name="name" class="form-control" id="name" aria-describedby="emailHelp"
        placeholder="Ej: La cafetera rota de Raluca" value="{{name}}">
    </div>
    <div class="form-group">
      <label for="type">Tipo:</label>
      <input type="text" name="type" class="form-control" id="type" value="{{type}}" placeholder="Ej: coffe shop">
    </div>
    <div class="form-group">
      <label for="longitude">Longitud:</label>
      <input type="text" name="longitude" class="form-control" id="longitude" value="{{location.coordinates.[0]}}"
        placeholder="Ej: 40.393240 ">
    </div>
    <div class="form-group">
      <label for="latitude">Longitud:</label>
      <input type="text" name="latitude" class="form-control" id="latitude" value={{location.coordinates.[1]}}
        placeholder="Ej: -3.698244 ">
    </div>
    <button type="submit" class="btn btn-primary ">Submit</button>
  </form>
</div>
<div class="text-center margin-top">
  <a class="btn btn-dark " href="/places">Volver al listado</a>
</div>