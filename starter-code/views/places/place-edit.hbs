<h1>Editar lugar</h1>

<form action="/places/edit/{{_id}}" method="post">
  <label for="">Nombre:</label>
  <input type="text" name="name" value="{{name}}"><br>

  <label for="">Tipo:</label>
  <select name="type" id="type">
    <Option value="{{type}}">{{type}}</Option>
    <Option value="Coffee Shop">Coffee Shop</Option>
    <Option value="Bookstore">Bookstore</Option>
  </select>
  <br>
  <label for="">Localizaci√≥n:</label>
  <input type="text" name="latitude" id="latitude" value="{{location.coordinates.[0]}}">
  <input type=" text" name="longitude" id="longitude" value="{{location.coordinates.[1]}}">
  <br>
  <button type="submit" id="submit">Editar</button>
</form>