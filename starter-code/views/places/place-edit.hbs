<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2>Update the place</h2>
            <form action="/places/{{id}}/edit" method="POST">
                <div class="mb-3">
                    <label for="name" class="form-label">Place's name</label>
                    <input type="text" class="form-control" id="name" name="name" value="{{name}}">
                </div>
                <div class="mb-3">
                    <label for="type" class="form-label">Place's type</label>
                    <input type="text" class="form-control" id="type" name="type" value="{{type}}">
                </div>
                <div class="mb-3">
                    <label for="latitude" class="form-label">Latitude</label>
                    <input type="text" class="form-control" id="latitude" name="latitude" value="{{location.coordinates.[0]}}">
                </div>
                <div class="mb-3">
                    <label for="longitude" class="form-label">Longitude</label>
                    <input type="text" class="form-control" id="longitude" name="longitude" value="{{location.coordinates.[1]}}">
                </div>
                <button type="submit" class="btn btn-dark">Update place</button>
            </form>
        </div>
    </div>
    <a class="btn btn-secondary" href="/">Main page</a>
</div>