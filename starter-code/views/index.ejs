<!-- main.html -->
<!DOCTYPE html>
<html>

<head>
  <title>Coffee & Books</title>
  <style>
    #map {
      height: 500px;
      width: 100%;
    }
  </style>
</head>

<body>

  <!-- TITLE -->
  <h2>Coffee & Books</h2>
  <div id="map"></div>

  <!-- ADDING PLACE LOCATIONS FIELDS FORM -->
  <br/>
  <form method="POST" action="/">
    <label>Place</label>
    <input type="text" name="name" placeholder="name">

    <label>Address</label>
    <input type="text" name="latitude" placeholder="Latitude">
    <input type="text" name="longitude" placeholder="Longitude">

    <label>Category</label>
    <select id="category">
      <option value="bookstore">Book Store</option>
      <option value="coffeejoint">Coffee Joint</option>
    </select>

    <button id="submit">SUBMIT</button>
  </form>

  <!-- LISTING ALL LOCATIONS IN THE DATABASE -->
  <h3>List</h3>

  <ul>
    <% place.forEach(place => { %>
      <li>
        <%= place.name %>
      </li>
      <% }) %>
  </ul>


  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDnTGv-ld43BemZSend17x41Vl8Qk0jgH0">
  </script>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.17.1/axios.min.js">
  </script>

  <script type="text/javascript" src="javascripts/main.js"></script>
</body>

</html>
