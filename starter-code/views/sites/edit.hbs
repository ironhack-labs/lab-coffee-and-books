<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Editar sitio</h1>
            <hr>
            <form action="/listado/{{site.id}}/editar" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{site.name}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="type" class="form-label">Coffee Shop / Bookstore</label>
                            <input type="text" class="form-control" id="type" name="type" value="{{site.type}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="latitud" class="form-label">Latitud</label>
                            <input type="text" class="form-control" id="latitud" name="latitud"
                                value="{{site.location.coordinates.[0]}}">
                        </div>

                        <div class="mb-3">
                            <label for="longitud" class="form-label">Longitud</label>
                            <input type="text" class="form-control" id="longitud" name="longitud"
                                value="{{site.location.coordinates.[1]}}">
                        </div>
                    </div>
                </div>

                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Editar sitio</button>
                </div>
            </form>
        </div>
    </div>

</div>