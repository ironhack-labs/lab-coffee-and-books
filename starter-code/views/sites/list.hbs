<div class="container mt-5">

    <div class="row">

        {{#each sites}}

        <div class="col-md-3">

            <article class="character-card mb-5">

                <h4>{{name}}</h4>
                <hr>
                <p>Tipo de lugar: {{type}}</p>

                <div class="d-grid">

                    <div class="btn-group">
                        <a href="/listado/{{id}}/editar" class="btn btn-dark btn-sm">Editar</a>

                        <form action="/listado/{{id}}/eliminar" method="POST">
                            <input type="submit" value="Eliminar sitio" class="btn btn-danger">
                        </form>

                    </div>

                </div>

            </article>

        </div>
        {{/each}}
    </div>

</div>