<div class="row justify-content-center">
  <div class="col-md-6">
    <h1>Crear nuevo sitio</h1>
    <form action="/create" method="POST">
      <div class="form-group">
        <label for="field1">Nombre</label>
        <input name="name" type="text" class="form-control" id="field1" placeholder="Nombre">
      </div>
      <div class="form-group">
        <label for="field2"></label>
        <select name="type" class="form-control" id="field2">
          <option value="Cofee shop">Cofee shop</option>
          <option value="Bookstore">Bookstore</option>
        </select>
      </div>
      <div class="form-group">
        <label for="field3">Longitud</label>
        <input name="longitude" type="text" class="form-control" id="field3" placeholder="Longitud">
      </div>
      <div class="form-group">
        <label for="field4">Latitud</label>
        <input name="latitude" type="text" class="form-control" id="field4" placeholder="Latitud">
      </div>

      <button type="submit" class="btn btn-dark">Crear Sitio</button>
    </form>
  </div>
</div>