<h2>{{name}}</h2>
<img src="{{image}}" alt="{{name}}">
<p>Category: {{category}}</p>
<p>Rank: {{starts}}</p>

<div id="map" style="width: 400px; height: 300px"></div>

<br><br>
<a href="/places/{{_id}}/edit">
  <button>Edit</button>
</a>
<a href="/places/{{_id}}/delete">
  <button>Delete</button>
</a>

