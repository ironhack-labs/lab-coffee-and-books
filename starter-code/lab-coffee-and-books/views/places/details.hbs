<div class="container">
    <h1>Detalles de {{place.name}}</h1>

    <hr>

    <div class="row">
        <div class="col-md-6">
            <p>Coffe or books? {{place.type}}</p>
            <p>Where? {{place.location.coordinates}}</p>
            
        </div>        
        
    </div>

    <a href="/places/edit/{{place.id}}" class="btn btn-warning btn-sm">Edit</a>
    
    <form action="/places/delete/{{place.id}}" method="POST" style="display: inline-block">
        <input type="submit" value="delete" class="btn btn-danger btn-sm">
    </form> 


    <hr>

    <a href="/places/all-places" class="btn btn-dark">Get back to the list!</a>
</div>
