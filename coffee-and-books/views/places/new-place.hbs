<div class="container">

    <h1>Create new place</h1>

    <hr>

    <form action='/places/create' method='POST'><br>

        <label>Name
            <input name="name" type="text">
        </label>

        <label>Type
            <select name="type" class="form-select">
                {{#each types}}
                <option>{{this}}</option>
                {{/each}}
            </select>
            <br><br>

            <label>Latitude
                <input name="latitude" type="text">
            </label>
            <br><br>

            <label>Longitude
                <input name="longitude" type="text">
            </label>
            <br><br><br>

            <input type="submit" value="Create">

    </form>

</div>