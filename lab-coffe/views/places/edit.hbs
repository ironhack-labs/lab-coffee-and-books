<div class="container mt-4">
    <h1 class="mb-4 text-center">Editar</h1>



    <form method="POST" action="/listado/editar/{{_id}}">
        <div class="form-group">
            <label for="name">Nombre</label>
            <input type="text" class="form-control" id="name" name="name" value="{{name}}">
        </div>

        <div class="form-group">
            <label for="description">Descripción</label>
            <input type="text" class="form-control" id="description" name="description" value="{{description}}">
        </div>

        <div class="form-group">
            <label for="category">Categoría</label>
            <select class="form-control" id="category" name="place" value="{{place}}">
                <option>Coffe shop</option>
                <option>Bookstore</option>

            </select>
        </div>

        coordinates
        <div class="form-group">
            <label for="latitude">Latitud</label>
            <input type="text" class="form-control" id="latitude" name="latitude" value="{{location.coordinates.[1]}}">
        </div>

        <div class="form-group">
            <label for="longitude">Longitud</label>
            <input type="text" class="form-control" id="longitude" name="longitude"
                value="{{location.coordinates.[0]}}">
        </div>

        <button type="submit" class="btn btn-success btn-block">editar</button>
    </form>
</div>