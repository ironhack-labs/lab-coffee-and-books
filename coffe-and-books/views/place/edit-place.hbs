<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2>Edit place</h2>
            <hr>
            <form action="/place/create-place" method="POST">
                <div class="mb-3 mt-5">
                    <label for="placeName" class="form-label">Place name</label>
                    <input type="text" class="form-control" id="placeName" name="name" value="{{name}}">
                </div>


                <div class="mb-3 mt-5">
                    <label for="placeType" class="form-label">Place type</label>
                    <input type="text" class="form-control" id="placeType" name="type" value="{{type}}">
                </div>

                <div class="mb-3">
                    <label for="placeLocation" class="form-label">latitude</label>
                    <input type="text" class="form-control" id="placeLocation" name="latitude"
                        value="{{location.coordinates.[0]}}">
                </div>
                <div class="mb-3">
                    <label for="placeLocation" class="form-label">longitude</label>
                    <input type="text" class="form-control" id="placeLocation" name="longitude"
                        value="{{location.coordinates.[1]}}">
                </div>



                <button type="submit" class="btn btn-dark">Edit the place!</button>
            </form>

        </div>
    </div>
</div>