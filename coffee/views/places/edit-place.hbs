<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>New Place</h1>
            <hr>

            <form action="/places/edit-place/{{id}}" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" id="name" name="name" value="{{places.name}}">
                        <div class="form-text">Requerido.</div>
                    </div>
                    <div class="col">
                        <label for="type" class="form-label">Type</label>
                        <select class="form-select" id="type" name="type" value="{{places.type}}">
                            <option value="coffeshop">Coffeshop</option>
                            <option value="bookstore">Bookstore</option>
                        </select>
                    </div>
                    <div class="col">
                        <label for="latitude" class="form-label">Latitud</label>
                        <input type="text" class="form-control" id="latitude" name="latitude"
                            value="{{places.latitude}}">
                        <div class="form-text">Requerido.</div>
                    </div>
                    <div class="col">
                        <label for="longitude" class="form-label">Longitud</label>
                        <input type="text" class="form-control" id="longitude" name="longitude"
                            value="{{places.longitude}}">
                        <div class="form-text">Requerido.</div>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Completar registro</button>
                </div>

            </form>
        </div>
    </div>

</div>