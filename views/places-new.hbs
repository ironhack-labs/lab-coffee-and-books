<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Nuevo Lugar</h1>
        </div>


        <div class="col-md-6">

            <form action="/new" method="post">
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name-input">
                </div>
                <div class="form-group">

                    <label for="type-list">Tipo de lugar:</label>
                    <select name="type" type="text" class="form-control" id="type-list">
                    <option>Seleccionar</option>
                    <option >coffee shop</option>
                    <option >bookstore</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-dark">Crear Lugar</button>
            </form>
        </div>

    </div>
</div>