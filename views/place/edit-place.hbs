<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Unpate a place</h1>
            <hr>

            <form action="/palces/{{_id}}/edit" method="POST">

                <div class="mb-3 row">
                    <div class="col">
                        <label for="name" class="form-label">Name</label>
                        <input minlength="2" type="name" class="form-control" id="name" name="name" value="{{name}}">
                    </div>


                    <div class="col">
                         <label for="type">Select a type for the place: the presiente type is {{type}}</label>
                         <select name="type" id="type" multiple>
                          <option value="coffee shop">coffee shop</option>
                          <option value="bookstore">bookstore</option>
                         </select>
                    </div>

                      <div class="col">
                        <label for="latitude" class="form-label">coordinates</label>
                        <input  type="latitude" class="form-control" id="latitude" name="latitude" value="{{location.coordinates}}">
                    </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-dark block">Confirm the update</button>
                </div>
            </form>
        </div>
    </div>

</div>