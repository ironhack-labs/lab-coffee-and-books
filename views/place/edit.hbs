<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Editar {{places.name}}</h1>
            <hr>
            <form action="/lugares/editar/{{places.id}}" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{places.name}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="type" class="form-label">Type</label>
                            <input type="text" class="form-control" id="type" name="type" value="{{places.type}}">
                        </div>
                        <div class="mb-3">
                            <label for="latitude" class="form-label">Latitud</label>
                            <input type="text" class="form-control" id="latitude" name="latitude"
                                value="{{places.location.coordinates.[0]}}">
                        </div>
                        <div class="mb-3">
                            <label for="longitude" class="form-label">Longitud</label>
                            <input type="text" class="form-control" id="longitude" name="longitude"
                                value="{{places.location.coordinates.[1]}}">
                        </div>
                    </div>
                </div>



                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Guardar edici√≥n</button>
                </div>
            </form>
        </div>
    </div>


</div>