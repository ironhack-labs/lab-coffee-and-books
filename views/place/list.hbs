<div class="container mt-5">

    <div class="row">

        {{#each places}}

        <div class="col-md-3">

            <article class="character-card mb-5">

                <h4>{{name}}</h4>
                <hr>
                <p>Type: {{type}}</p>


                <div class="d-grid">

                    <div class="btn-group">

                        <a href="/lugares/editar/{{id}}" class=" btn btn-warning btn-sm">Editar</a>
                        <form action="/eliminar/{{id}}" method="POST">
                            <input type="submit" value="Eliminar" class="btn btm-danger btn-sm">
                        </form>

                    </div>

                </div>

            </article>

        </div>
        {{/each}}
    </div>

</div>