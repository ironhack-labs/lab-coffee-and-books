<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Nuevo lugar</h1>
            <hr>
            <form action="/lugares/crear" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Name</label>
                            <input type="text" class="form-control" id="name" name="name">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="latitude" class="form-label">Latitud</label>
                            <input type="text" class="form-control" id="latitude" name="latitude">

                            <label for="longitude" class="form-label">Longitud</label>
                            <input type="text" class="form-control" id="longitude" name="longitude">

                            <label for="type" class="form-label">Choose type:</label>
                            <select class="form-select" name="type" id="type" multiple>

                                <option value="cofee shop">Cofee shop</option>
                                <option value="bookstore">Book store</option>

                            </select>
                        </div>
                    </div>
                </div>





        </div>

        <div class="d-grid mt-5">
            <button type="submit" class="btn btn-dark btn-lg">Crear lugar</button>
        </div>
        </form>
    </div>
</div>


</div>