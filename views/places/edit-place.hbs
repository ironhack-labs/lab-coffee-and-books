<div class="container mt-5">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Editar Lugar</h1>
            <hr>
            <form action="/places/{{_id}}/edit" method="POST">
                <div class="row">
                    <div class="col">
                        <div class="mb-3">
                            <label for="name" class="form-label">Nombre</label>
                            <input type="text" class="form-control" name="name" value="{{name}}">
                        </div>
                    </div>
                    <div class="col">
                        <div class="mb-3">
                            <label for="type" class="form-label">Tipo</label>
                            <input type="text" class="form-control" name="type" value="{{type}}">
                        </div>
                    </div>
                    <div class="mb-3">
                        <label for="latitude" class="form-label">Latitud</label>
                        <input type="text" class="form-control" name="latitude" value="{{location.coordinates.[0]}}">
                    </div>
                    <div class="mb-3">
                        <label for="longitude" class="form-label">Longitud</label>
                        <input type="text" class="form-control" name="longitude" value="{{location.coordinates.[1]}}">
                    </div>
                </div>
                <div class="d-grid mt-5">
                    <button type="submit" class="btn btn-dark btn-lg">Â¡Hecho!</button>
                </div>
            </form>
        </div>
    </div>


</div>