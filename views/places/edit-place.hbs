<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Editar sitio</h1>
        </div>

        <div class="col-md-6">

            <form action="/places/edit?place_id={{_id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name-input" value={{name}}>
                </div>
                <div class="form-group">
                    <label for="type-input">Tipo</label>
                    <input name="type" type="type" class="form-control" id="type-input" value={{type}}>
                </div>
                <div class="form-group">
                    <label for="location-input">Ubicaci√≥n</label>
                    <input name="latitude" type="text" class="form-control" id="location-input"
                        placeholder="latitud" value={{location.coordinates.[0]}}><br>
                    <input name="longitude" type="text" class="form-control" id="location-input" placeholder="longitud" value={{location.coordinates.[1]}}>
                </div>
                <button type="submit" class="btn btn-dark">Editar nuevo sitio</button>
                <a href="/places" class="btn btn-dark">Volver</a>

            </form>
        </div>

    </div>
</div>