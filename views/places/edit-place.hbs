<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">
            <h2 style="font-weight: 100">Edit {{name}}</h2>
            <hr>

            <form action="/places/edit?id={{id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>

                <div class="form-group">
                    <label for="type-list">Type</label>
                    <select name="type" class="form-control" id="type-list">
                        <option selected value="select-one">Select one...</option>
                        <option value="bookstore">Bookstore</option>
                        <option value="coffee shop">Coffee Shop</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <h4 style="padding-top: 10px;">Location</h4>
                    <hr>
                    {{#with location}}
                    <label for="laitude-input">Latitude</label>
                    <input name="latitude" type="number" class="form-control" id="latitude-input"
                    value="{{coordinates.[0]}}" step="any">
                
                    <label for="longitude-input" style="padding-top: 10px;">Longitude</label>
                    <input name="longitude" type="number" class="form-control" id="longitude-input"
                    value="{{coordinates.[1]}}" step="any">
                    {{/with}}
                </div>
                

                <button type="submit" class="btn btn-dark">Save changes</button>
                <a href="/places" class="btn btn-outline-dark btn-right">Back</a>

            </form>
        </div>

    </div>
</div>