  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Editar</h1>
    </div>

    <div class="col-md-6">

      <form action="/places/edit/{{id}}" method="post">
        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" value={{name}} id="name-input">
        </div>

        <div class="form-group">
          <label for="description-input">Tipo</label>
          <input name="type" type="text" class="form-control" value={{type}} id="type-input">
        </div>

        <h6>Localizaci√≥n</h6>
        <div class="form-group">
          <label for="lat-input">Latitud</label>
          <input name="lat" type="number" step=any value={{location.lat}} class="form-control" id="lat-input">
        </div>

        <div class="form-group">
          <label for="lng-input">Longitud</label>
          <input name="lng" type="number" step=any value={{location.lng}} class="form-control"  id="lng-input">
        </div>

        <br>
        <p>{{errorMsg}}</p>
        <br>
        <button type="submit" class="btn btn-dark">Guardar cambios</button>
      </form>
    </div>

  </div>