<div class="container">
    <div class="place-list">
        <h1> PLACES_ </h1>

        {{#each places }}

        <div class="row">

            <div class="card col-2 mt-4">
                <div class="card-body text-left" style="color: black;">
                    <li> <a class="card-title mb-4" href="/place/{{id}}"> <strong>{{ name }}</strong> </a></li>
                    <div class="row mt-4">
                        <div class="col-6 px-1">
                            <a href="/editar/{{id}}" class="btn btn-md btn btn-success w-100">edit</a>
                        </div>
                        <div class="col-6 px-1">
                            <form action="/borrar/{{id}}" method="POST" style="display: inline">
                                <button type="submit" class="btn btn-block btn-md btn-danger w-100"
                                    onclick="return confirm('Are you sure you want to delete this place?')">Delete</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        {{/each}}

    </div>
</div>