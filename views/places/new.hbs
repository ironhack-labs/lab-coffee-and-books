<div class="container">

    <h2>New place</h2>
    <form action="/places/new" method="POST">

        <div class="form-group">
            <label for="fiel1">Name</label>
            <input name="name" type="text" class="form-control" id="field1" placeholder="Name">
        </div>

        <div class="form-group">
            <label for="field2">Shop type</label>
            <select name="type" id="field2" class="form-control">
                <option selected>Choose type</option>
                <option>BookStore</option>
                <option>coffee shop</option>
            </select>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="field3">latitude</label>
                <input name="latitude" type="text" class="form-control" id="field3" placeholder="latitude">
            </div>
            <div class="form-group col-md-6">
                <label for="field4">longitude</label>
                <input name="longitude" type="text" class="form-control" id="field4" placeholder="longitude">
            </div>
        </div>
        <button type="submit" class="btn btn-dark">Add</button>
        <a href="/" class="btn btn-dark">Back</a>
    </form>
</div>