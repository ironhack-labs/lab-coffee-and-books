<div class="row">
  {{#each all}}
    <div class="col-md-4">
      <div class="card" style="width: 18rem;">
        <img src="{{image}}" class="card-img-top" alt="{{name}}">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">{{type}}</p>
          <a href="/places/{{id}}" class="btn btn-info">Ver detalles</a>
        </div>
      </div>
    </div>
  {{/each}}
</div>