<div class="row justify-content-center">
  <div class="col-md-5">
    <h1>Editar rincón</h1>

    <hr>

    {{#if errorMsg}}
      {{errorMsg}}
    {{/if}}

  </div>

  <div class="col-md-5">
    
    <form action='/places/edit/{{id}}' method='POST'>
      <div class='form-group'>
        <label for='name'>Nombre</label>
        <input type='text' class='form-control' id='name' name="name" value="{{name}}" required>
      </div>
      <div class='form-group'>
        <label for='description'>Descripción</label>
        <input type='text' class='form-control' id='description' name="description" value="{{description}}">
        <small id='textHelp' class='form-text text-muted'>¿Qué podemos esperar del sitio?</small>
      </div>

      <fieldset class="form-group">
        <div class="row">
          <legend class="col-form-label col-sm-2 pt-0">Tipo</legend>
          <div class="col-sm-10">
            <div class="form-check">

              <input class="form-check-input" type="radio" name="type" id="gridRadios1" value="coffee shop" checked>
              <label class="form-check-label" for="gridRadios1">
                Coffee Shop
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="radio" name="type" id="gridRadios2" value="bookstore">
              <label class="form-check-label" for="gridRadios2">
                Bookstore
              </label>
            </div>
          </div>
        </div>
      </fieldset>

      <div class="form-row">
        <div class="col-md-6 mb-3">
          {{#with location.coordinates}}
            <label for="latitude">Latitud</label>
            <input type="number" class="form-control" id="latitude" name="latitude" value="{{this.[0]}}">
          {{/with}}
        </div>
        <div class="col-md-6 mb-3">
          {{#with location.coordinates}}
            <label for="longitude">Longitud</label>
            <input type="number" class="form-control" id="longitude" name="longitude" value="{{this.[1]}}">
          {{/with}}
        </div>
      </div>

      <button type='submit' class='btn btn-dark'>CREAR</button>
    </form>
  </div>
</div>