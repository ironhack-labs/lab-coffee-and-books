<div class="container">

    <div class="row">

        <div class="col-md-6">
            <h1 style="font-weight: 100">Edit {{name}}</h1>
        </div>
        <hr>

        <div class="col-md-6">

            <form action="/places/edit?id={{id}}" method="POST">
                <div class="form-group">
                    <label for="name-input">Name</label>
                    <input name="name" type="text" class="form-control" id="name-input" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="type-input">Establishment</label>
                    <select name="type" class="form-control" id="park-list">
                        <option>Choose an option</option>
                        <option value="coffee shop">Coffee shop</option>
                        <option value="bookstore">Bookstore</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="latitude-input">Latitude</label>
                    <input name="latitude" type="text" class="form-control" id="latitude"
                        value="{{location.coordinates.[0]}}">
                </div>
                <div class="form-group">
                    <label for="longitude-input">Longitude</label>
                    <input name="longitude" type="text" class="form-control" id="longitude-input"
                        value="{{location.coordinates.[1]}}">
                </div>

                <button type="submit" class="btn btn-dark">Edit the establishment</button>
                <a href="/places" class="btn btn-dark">Go back</a>

                {{#if errorMsg}} <div
                    style="background: red; color: white; text-align: center; padding: 10px; margin-top:10px">
                    {{errorMsg}}</div> 
                {{/if}}
            </form>
        </div>

    </div>
</div>