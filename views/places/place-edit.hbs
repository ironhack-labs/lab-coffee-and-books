<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="row">
                <div class="col-12">

                    <h1 class="text-center mb-4">Edita {{name}}</h1>

                    <form method="POST" action="/editar/{{id}}">
                        <div class="form-group">
                            <label for="name">Nombre</label>
                            <input name="name" type="text" class="form-control" id="name" value="{{name}}">
                        </div>
                        <div class="form-group mt-3">
                            <label for="type">Type</label>
                            <select class="form-control" name="type" id="type" value="{{type}}">
                                <option value="coffeeshop">Coffee Shop</option>
                                <option value="bookstore">Bookstore</option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <label for="latitude">Latitud</label>
                            <input name="latitude" type="text" class="form-control" id="latitude"
                                value="{{location.coordinates.[0]}}">
                        </div>
                        <div class="form-group mt-3">
                            <label for="longitude">Longitud</label>
                            <input name="longitude" type="text" class="form-control" id="longitude"
                                value="{{location.coordinates.[1]}}">
                        </div>
                        <div class="form-group  mt-3">
                            <button type="submit" class="btn btn-dark btn-lg">Guardar edici√≥n</button>
                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>
</div>