<form action="/places/edit/{{id}}" method="POST">
    <div class="form-row justify-content-center pt-3">
        <div class="form-group col-7 m-2">
            <label for="name">name:</label>
            <input name="name" type="text" class="form-control text-secondary" value="{{name}}">
        </div>
        <div class="form-group col-7 m-2">
            <label for="type">type:</label>
            <input name="type" type="text" class="form-control text-secondary" value="{{type}}">
        </div>
        <div class="form-group col-7 m-2">
            <label for="longitude">Longitude</label>
            <input name="longitude" type="text" class="form-control" value={{location.coordinates.[0]}}>
        </div>
        <div class="form-group col-7 m-2">
            <label>Latitude</label>
            <input name="latitude" type="text" class="form-control" value={{location.coordinates.[1]}}>
        </div>
        <button class="btn btn-outline-primary col-7 m-2" type="submit">Create</button>
    </div>
</form>