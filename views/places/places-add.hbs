  <div class="row">

    <div class="col-md-6">
      <h1 style="font-weight: 100">Nuevo lugar</h1>
    </div>

    <div class="col-md-6">

      <form action="/places/add-place" method="post">
        <div class="form-group">
          <label for="name-input">Nombre</label>
          <input name="name" type="text" class="form-control" id="name-input">
        </div>

        <div class="form-group">
          <label for="type">Tipo</label>
          <input name="type" type="text" class="form-control" id="type-input">
        </div>

        <br>
        <h6>Localización</h6>
        <div class="form-group">
          <label for="lat-input">Latitud</label>
          <input name="lat" type="number" step=any class="form-control" id="lat-input">
        </div>

        <div class="form-group">
          <label for="lng-input">Longitud</label>
          <input name="lng" type="number" step=any class="form-control" id="lng-input">
        </div>

        <br>
        <p>{{errorMsg}}</p>
        <br>
        <button type="submit" class="btn btn-dark">Añadir lugar</button>
      </form>
    </div>

  </div>