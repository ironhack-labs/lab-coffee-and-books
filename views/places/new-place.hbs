<div class="form-bg">
    <div class="container" id="new-place">

        <div class="row">

            <div class="col-md-6">
                <h1 style="font-weight: 100">Nuevo lugar</h1>
            </div>

            <div class="col-md-6">

                <form action="/places/new" method="POST">
                    <div class="form-group">
                        <label for="name-input">Nombre</label>
                        <input name="name" type="text" class="form-control" id="name-input">
                    </div>
                    <div class="form-group">
                        <label for="name-input">Latitud</label>
                        <input name="latitude" type="text" class="form-control" id="name-input">
                    </div>
                    <div class="form-group">
                        <label for="name-input">Longitud</label>
                        <input name="longitude" type="text" class="form-control" id="name-input">
                    </div>

                    <div class="form-group">
                        <label for="park-list">Tipo</label>
                        <select name="type" class="form-control" id="park-list">
                            <option>Seleccionar</option>
                            <option value="coffee shop">Coffee shop</option>
                            <option value="bookstore">Bookstore</option>
                        </select>
                    </div>
                    <button type="submit" class="btn btn-dark">AÃ±adir</button>
                    <a href="/places" class="btn btn-dark">Volver</a>
                    {{#if errorMsg}}
                    <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                        {{errorMsg}}</p>
                    {{/if}}

                </form>
            </div>

        </div>
    </div>
</div>