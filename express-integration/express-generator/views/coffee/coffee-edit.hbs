<div class="container">


    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar </h1>

            <form action="/coffee/editar/{{_id}}" method="post">

                <div class="form-group">
                    <label>Nombre</label>
                    <input name="name" type="text" class="form-control" value="{{name}}">
                </div>

                <div class="form-group">
                    <label>Tipo</label>
                    <input name="place" type="text" class="form-control" value="{{place}}">
                </div>

                <div class="form-group">
                    <label>Latitude</label>
                    <input  name="latitude"type="text" class="form-control"value={{location.coordinates.[1]}}>
                </div>

                <div class="form-group">
                    <label>Longitude</label>
                    <input name="longitude" type="text" class="form-control"value={{location.coordinates.[0]}} >
                </div>

                <button type="submit" class="btn btn-dark">Guardar</button>
            </form>
        </div>
    </div>
</div>